{{#*inline "page"}}
<form method="POST" enctype="multipart/form-data">
    <div class="col-md-9">
        <div class="ba-block">
            <span class="block-header">New Issue</span>
                <div class="form-group">
                    <label for="summary">Summary</label>
                    <input type="text" class="form-control" name="summary">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea name="description" id="" cols="30" rows="10" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label for="priority">Priority</label>
                    <select name="priority" id="" class="form-control">
                        <option value="1">Low</option>
                        <option value="2">Medium</option>
                        <option value="3">High</option>
                        <option value="4">Critical</option>
                    </select>
                </div>
            <div class="col-md-4 col-md-offset-4">
                <div class="btn-group btn-group-justified" role="group">
                    <a href="/helpdesk" class="btn btn-danger">
                        <i class="fa fa-times" aria-hidden="true"></i> Cancel
                    </a>
                    <div class="btn-group">
                        <button type="submit" class="btn btn-success" role="button">
                            <i class="fa fa-paper-plane" aria-hidden="true"></i> Submit
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="ba-block">
            <span class="block-header">Images</span>
            <label class="btn btn-primary btn-file btn-block">
                Browse <input id="issue_image" name="issue_image" type="file" style="display:none;">
            </label>
            <div class="iu-list">
                <div id="iu-display" class="iu-item iu-placeholder"></div>
            </div>
            {{!-- List images here (include placeholder thingy) --}}
        </div>
    </div>
</form>
<script src="/static/js/helpdesk_new.js"></script>
{{/inline}}
{{> common/layout}}